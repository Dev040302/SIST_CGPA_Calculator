<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".MarkFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scroll">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester 1"
                        android:textColor="@color/black"
                        android:textSize="30dp"
                        android:layout_marginTop="40dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Heading"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/context"
                        android:textColor="#A30000"
                        android:textAlignment="center"
                        android:text="*Put '0' if Adsent in any Subject\n or Having Arrear"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Heading"
                        android:id="@+id/sub1"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="40dp"
                        android:inputType="number"
                        android:textSize="25dp"
                        android:hint="SHSA1101-Technical English"
                        android:textCursorDrawable="@null"
                        android:backgroundTint="@color/teal_700"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub1"
                        android:id="@+id/sub2"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="30dp"
                        android:inputType="number"
                        android:textSize="25dp"
                        android:hint="SMTA1101 - Maths"
                        android:textCursorDrawable="@null"
                        android:backgroundTint="@color/teal_700"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub2"
                        android:id="@+id/sub3"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="30dp"
                        android:inputType="number"
                        android:textSize="25dp"
                        android:hint="SCYA1101 - Chemistry"
                        android:textCursorDrawable="@null"
                        android:backgroundTint="@color/teal_700"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub3"
                        android:id="@+id/sub4"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="30dp"
                        android:inputType="number"
                        android:textSize="25dp"
                        android:hint="SBTA1101 - EVS"
                        android:textCursorDrawable="@null"
                        android:backgroundTint="@color/teal_700"
                        android:visibility="gone"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub4"
                        android:id="@+id/sub5"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="30dp"
                        android:inputType="number"
                        android:textSize="25dp"
                        android:hint="SEEA1103 - EEE"
                        android:textCursorDrawable="@null"
                        android:backgroundTint="@color/teal_700"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub5"
                        android:id="@+id/sub6"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="30dp"
                        android:inputType="number"
                        android:textSize="25dp"
                        android:hint="SCSA1101 - Python"
                        android:textCursorDrawable="@null"
                        android:backgroundTint="@color/teal_700"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub6"
                        android:id="@+id/sub7"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="30dp"
                        android:inputType="number"
                        android:textSize="25dp"
                        android:hint="SCYA2101 - Chemistry Lab"
                        android:textCursorDrawable="@null"
                        android:backgroundTint="@color/teal_700"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub7"
                        android:id="@+id/sub8"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="30dp"
                        android:inputType="number"
                        android:textSize="25dp"
                        android:hint="SCSA2101 - Python Lab"
                        android:textCursorDrawable="@null"
                        android:backgroundTint="@color/teal_700"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub8"
                        android:id="@+id/sub9"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="30dp"
                        android:inputType="number"
                        android:textSize="25dp"
                        android:hint="SCSA2201 - Data Structures Lab"
                        android:textCursorDrawable="@null"
                        android:backgroundTint="@color/teal_700"
                        android:visibility="gone"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub9"
                        android:id="@+id/btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:backgroundTint="@color/teal_700"
                        android:text="NEXT"/>


                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/teal_700"
            android:id="@+id/progress"
            android:visibility="gone"/>

    </RelativeLayout>



</FrameLayout>